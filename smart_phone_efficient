#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	long long n , i;
	cin>>n;
	long long arr[n];
	for(i=0;i<n; i++)
	    cin>>arr[i];
	sort(arr, arr+n);
	 
	 long long max=0;
	 for(i=0; i<n; i++)
	    if( arr[i] * (n-i) > max)
	        max = arr[i] * (n-i);
	 
	 cout<<max<<endl;
	
	return 0;
}
